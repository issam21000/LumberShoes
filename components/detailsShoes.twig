{% extends 'templates/base_layout.twig' %}

	{% block title %}
		{{ parent() }} Details
	{% endblock %}

	{% block modal %}
		<link rel="stylesheet" type="text/css" href="/Assets/css/modal.css">
		<link rel="stylesheet" type="text/css" href="/Assets/css/datepicker.min.css">
		<link rel="stylesheet" type="text/css" href="/Assets/css/datepicker3.min.css">
		<script type="text/javascript" src="/Assets/js/modal.js"></script>		
		<script type="text/javascript" src="/Assets/js/bootstrap-datepicker.min.js"></script>		
	{% endblock %}
	

	{% block content %}

		<h2 class="section-container">Shoes details</h2>	

		<div class="shoesDetailsContainer">	

			<div class="shoesDetails" data-pid=""> 				
				<img class="detailsShoesImage" src="/Assets/images/shoes/{{ shoes.image }}"><br>
			</div>
			<div class="descriptionShoes">
				 <h3><strong>{{ shoes.brand.legend }}</strong></h3> 
				 <p>{{ shoes.description }}</p>
				 <hr id="hr">
				 {% if shoes.is_reserved == 0 %}
				 	<h3 class="available">Available !</h3>
				{% else %} 	
				 	<h3 class="notAvailable">Not available !</h3>
				{% endif %}
				 <div> <h5><strong>Size : {{ shoes.size }}</strong></h5> </div>
				 <p>rent and ship by <span class="ShoesRental">ShoesRental</span>
				 <p><b>The delivery :</b><br>Free delivery<br>Usually delivered in 1 to 3 days<br>Or immediate withdrawal in shop</p>
			</div>
			
			<div class="priceAddBag">
				<div class="priceDetails">Price per day : <span>{{ shoes.price_per_day }}<sup>â‚¬00</sup><span></div><br>
			
						<div class="addBagDetails">
							<button id="buttonDateRental" data-dismiss="modal">Add to bag</button>
						</div>					
				</div>
			</div>
			
		</div>

		<div class="modal fade" id="dateRentalModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
	    	<div class="modal-dialog">
				<div class="modal-container">
					<h1>Enter your rental dates</h1><br>
					<form id="eventForm" method="post" class="form-horizontal">
							<div>
							      <label for="startDate">Start date :</label>
							      <input id="startDate" type="date" name="startDate" value="">
	  						</div>

							  <div>
							      <label for="date2">End date :</label>
							      <input id="endDate" type="date" name="endDate" value="">
							  </div>					    

					    <div class="form-group">
					        <div class="col-xs-11">
					            <input type="submit" name="submit" class="submit modal-submit" value="Submit">
					        </div>
					    </div>
					</form>							  
				</div>
			</div>
		</div>	

	{% endblock %}
