{% extends 'templates/base_layout.twig' %}

	{% block title %}
		{{ parent() }} Home
	{% endblock %}

	

	{% block content %}

		{% if flash.getMessage('InfoDeconnected')[0] %}
	   		<div class="alert alert-danger">
	        	<b>{{ flash.getMessage('InfoDeconnected')[0] }}</b>
	    	</div>
		{% endif %}

		{% if flash.getMessage('Info')[0] %}
	   		<div class="alert alert-success">
	        	<b>{{ flash.getMessage('Info')[0] }}</b>
	    	</div>
		{% endif %}

		<div class="shoesContainer">
			{% for row in shoes %}
				
				<div class="shoes"> 				
					<img class="shoesImage" src="/Assets/images/shoes/{{ row.image }}"><br>
					<strong>{{ row.brand.legend }}</strong>
					<div class="shoesDescription"> </div><br>
					<div> <h5><strong>Size : {{ row.size }}</strong></h5> </div>
					<div> <strong class="price">Price per day : <span>{{ row.price_per_day }}<sup>â‚¬00</sup><span></strong> </div><br>
								
					<div class="moreDtails margin-bottom">
						<a href="{{ path_for('details', {'id': row.id}) }}">More details</a>
					</div>
				</div>
			{% else %}
				<h2>Aucune chaussure dans ce magasin</h2>
			{% endfor %}
		</div>

	{% endblock %}